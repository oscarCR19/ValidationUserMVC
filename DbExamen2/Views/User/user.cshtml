@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/site.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DbExamen2.styles.css" asp-append-version="true" />
    <title>Login</title>
</head>
<body>

    
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <form asp-action="SaveUser" asp-controller="User" method="POST" enctype="multipart/form-data">
                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Ingresar</h2>
                                <p class="text-white-50 mb-5">Sus datos personales</p>
                                    
                                    
                                    @if (@ViewBag.alerta == "Email se encuentra registrado"){
                                        <div class="alert alert-danger" role="alert">
                                        @ViewBag.alerta
                                    </div>
                                    }

                                    @if (@ViewBag.alerta == "Usuario registrado con éxito")
                                    {
                                        <div class="alert alert-success" role="alert">
                                            @ViewBag.alerta
                                        </div>
                                    }
                                    

                                <div class="form-outline form-white mb-4">
                                        <input type="text" name="txtName" id="txtName" class="form-control form-control-lg" required />
                                    <label class="form-label" for="typeEmailX">Nombre</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                        <input type="email" name="txtEmail" id="txtEmail" class="form-control form-control-lg" required />
                                    <label class="form-label" for="typePasswordX">Email</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                        <!--Validacion  de contraseña caracteres especiales,mayusculas,etc-->
                                        <input type="password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[$!%*?&])[A-Za-z\d$!%*?&]{8,}$" required title="Los password deben contener al menos 8 caracteres, al menos una mayuscula,al menos una minuscula, al menos un numero y al menos un caracter especial" name="txtPassword" id="txtPassword" class="form-control form-control-lg" />
                                    <label class="form-label" for="typePasswordX">Contraseña</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input type="file" name="photo" id="photo" class="form-control" />
                                    <label class="form-label" for="typePasswordX">Foto</label>
                                </div>
                                <button class="btn btn-outline-light btn-lg px-5" type="submit">Registrar</button>

                                

                            </div>

                            </form>
                            @if (@ViewBag.alerta == "Usuario registrado con éxito")
                            {

                                <form asp-action="GoLogin" asp-controller="User" method="POST">
                                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Ir a login</button>
                                </form>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
    

</body>
</html>